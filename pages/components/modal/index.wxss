/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 20rpx;
}
.modal-title {
  /* padding-top: 28rpx; */
  font-size:28rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  background-color: #F6C75C;
  line-height: 80rpx;
}
.modal-content {
  padding: 75rpx 32rpx;
}
.modal-input {
  display: flex;
  border-radius: 4rpx;
  font-size: 28rpx;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.input {
  font-size: 24rpx;
  line-height: 36rpx;
  /* padding-left: 70rpx; */
  box-sizing: border-box;
  color:rgba(136,136,136,1);
}
input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  /* display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede; */
  font-size: 34rpx;
  line-height: 60rpx;
  padding-bottom: 49rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
}
.btn-cancel {
  width: 180rpx;
  height: 48rpx;
  color:rgba(246,199,92,1);
  text-align: center;
  border:1rpx solid rgba(246,199,92,1);
  border-radius:24rpx;
  font-size: 24rpx;
  display: inline-block;
  line-height: 48rpx;
  margin-left: 42rpx;
}
.btn-confirm {
  width: 180rpx;
  height: 48rpx;
  display: inline-block;
  color: white;
  text-align: center;
  background:rgba(246,199,92,1);
  border-radius: 24rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  margin-left: 59rpx;
}