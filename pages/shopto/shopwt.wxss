@import"../../lib/wxParse/wxParse.wxss";
page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f6f6f6;
  margin: 0;
  padding:0;
}
/* 直接设置swiper属性 */
swiper {
  height: 650rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
  background: #ffffff;
}
.detail .title {
  font-size: 36rpx;
  margin-left:  30rpx;
  color: #db1313;
  text-align: justify;
  padding-top: 10rpx;

}
.detail .price {
  color: #797979;
  font-size: 22rpx;
  margin-left: 30rpx;
  text-decoration:line-through;
  background: #ffffff;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green{
  background-color: #ffffff; 
  color: #fbc235;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: 1rpx solid #fbc235;
  padding: 10rpx 24rpx;
}
.button-red {
  background-color: #fbc235; 
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: 1rpx solid #fbc235;
  padding: 10rpx 24rpx;
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx 30rpx;
}
.line_nav_two{
  margin-right: 30rpx;
  width:500rpx;
  display: flex;
  justify-content: space-between;
}
.line_nav {
  width: 20rpx;
  height: 20rpx;
  background-color: #fbc235;
  border-radius: 50%;
  color: #ffffff;
  font-size: 16rpx;
  text-align: center;
  line-height: 20rpx;
  position: absolute;
  left: 75rpx;
  top: 20rpx;
} 
/* 占位 */
.temp {
  height: 100rpx;
}
text {
