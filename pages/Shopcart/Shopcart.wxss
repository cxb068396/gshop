}
/*每组属性的主盒子*/
.attr_box {
  width: 100%;
  overflow: hidden;
  border-bottom: 1rpx solid #ececec;
}
/*属性名*/
.attr_name {
  width: 20%;
  float: left;
  padding: 28rpx 0;
}
/*属性值*/
.attr_value_box {
  width: 80%;
  float: left;
  padding: 20rpx 0;
  font-size: 24rpx;
  overflow: hidden;
}
/*每个属性值*/
.attr_value {
  float: left;
  padding: 15rpx;
  margin: 0 10rpx;
}
/*每个属性选中的当前样式*/
.attr_value_active {
  background: #FFCC00;
  border-radius: 10rpx;
  color: #fff;
  padding: 15rpx;
  font-weight: 700;
}
/*禁用属性*/
.attr_value_disabled {
  color: #ccc;
}
 
