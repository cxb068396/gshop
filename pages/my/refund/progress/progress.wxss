page{
    /* background: #F6F6F6; */
    height: 100vh;
}

.progress-box{
    background: white;
    margin: 0 100rpx;
    padding-top: 29px;
}
.progress-item{ display: flex;}

.left{
    width: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-right: 29rpx;
}

.ball{
    width:12rpx;
    height:12rpx;
    background:#dddddd;
    border:4rpx solid #ffffff;
    border-radius:50%;
}

.ball-pass{
    width:25rpx;
    height: 25rpx;
    border: none;
    background: #F6C75C;
}

.column-line{
    width: 2rpx;
    height: 86rpx;
    background-color: #F0F0F0;
}
.line-pass{
    height: 75rpx;
}
.right{ color: #868686; display: flex;
    flex-direction: column;
    justify-content: center;align-items: flex-start}
.title{
    font-size: 24rpx;
    margin-bottom: 16rpx;
}
.content{
    font-size: 22rpx;
}
.now{
    font-size: 28rpx;
    color: #F6C75C;
}

.progress-item:first-child .up{ background: #ffffff;}
.progress-item:last-child .down{ background: #ffffff;}